{% set topper = site.data['topper.yaml'] %}
{% set benefits = topper.benefits %}

<div class="page-topper">
  <div class="page-topper-content">

    <div class="topper-art js-topper-art">
      <canvas id="canvas" class="topper-canvas"></canvas>
    </div>
    
    <div class="topper-title">
      <h2 class="js-topper-headline">{{ topper.title }}</h2>
      <div class="js-topper-deck intro-section">
        <p class="intro-paragraph">
          {{ topper.desc }}
        </p>
      </div>
    </div>

    <div class="grid benefits">
      {% for benefit in benefits %}
      <div class="grid-cell list js-topper-list">
        <div class="list-content">
          <h4 class="list--title">
            {{benefit.title}}
          </h4>
          <ul class="list--items">
          {% for item in benefit.list %}
            <li class="list--item js-topper-list-item">
              {% include '@templates/svgs/checkmark.svg' %}
              {{item}}
            </li>
          {% endfor %}
          </ul>
        </div>
      </div>
      {% endfor %}
      <div class="grid-cell list"></div>
    </div>
  </div>
</div>
