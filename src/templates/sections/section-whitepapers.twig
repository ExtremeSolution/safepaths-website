{#
title: Whitepapers section
#}

{% embed "@templates/layouts/basic-section.twig" %}

{% set whitepapers = site.data['whitepapers.yaml'] %}

{% block header %}
<h3 class="section-title">{{whitepapers.title}}</h3>
{% endblock %}

{% block content %}
<div class="whitepapers-content">
  {% for whitepaper in whitepapers.whitepapers %}
    <div class="whitepapers-content-block">
     {% include '@templates/partials/whitepaper.twig' with { whitepaper } %}
    </div>
  {% endfor %}
</div>
{% endblock %}

{% endembed %}