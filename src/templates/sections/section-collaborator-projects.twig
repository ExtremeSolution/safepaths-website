{#
title: Basic section
#}

{% set collaboratorProjects = site.data['collaborator-projects.yaml'] %}

{% embed "@templates/layouts/basic-section.twig" %}

{% block header %}
<h3 class="section-title">{{collaboratorProjects.title}}</h3>
{% endblock %}

{% block content %}
<div class="news-content">
  {% for project in collaboratorProjects.projects %}
    <div class="news-content-block">
      <div class="content-block-inner">
        {% include '@templates/partials/link-block.html' with {project} %}
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}

{% endembed %}